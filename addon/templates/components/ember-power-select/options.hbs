{{#each options as |opt|}}
  {{#if opt.groupName}}
    <li class="ember-power-select-group">
      <span class="ember-power-select-group-name">{{opt.groupName}}</span>
      <ul class="ember-power-select-options nested">
        {{#ember-power-select/options highlighted=highlighted selectedOption=selectedOption options=opt.options highlight=(action highlight) select=(action select) as |option|}}
          {{yield option}}
        {{/ember-power-select/options}}
      </ul>
    </li>
  {{else}}
    <li class="ember-power-select-option {{ember-power-select-option-classes opt selectedOption highlighted}}" onclick={{action select opt toggleDropdown}} onmouseover={{action highlight opt}}>
      {{yield opt}}
    </li>
  {{/if}}
{{/each}}
